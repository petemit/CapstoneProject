<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="@dimen/top_margin">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/widget_goal_tv"
            style="@style/TimeGoalTheme.WidgetTextTitle"
            android:layout_width="0dp"
            android:layout_height="@dimen/checkbox_size"
            android:layout_gravity="center|start"
            android:layout_marginStart="@dimen/half_margin"
            android:layout_weight="1"
            android:gravity="center|start"
            tools:text="@string/dummy_goal_title" />

        <FrameLayout
            android:id="@+id/widget_yes_no_checkbox"
            android:layout_width="0dp"
            android:layout_height="@dimen/widget_frame_size"
            android:layout_weight="1">

            <Button
                android:id="@+id/widget_yes_no_checkbox_off"
                android:layout_width="@dimen/checkbox_size"
                android:layout_height="@dimen/checkbox_size"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/right_margin"
                android:background="@android:drawable/checkbox_off_background"
                android:clickable="false"
                android:contentDescription="@string/yes_no_goal_checkbox_description"
                android:focusable="false"
                android:hapticFeedbackEnabled="true" />

            <Button
                android:id="@+id/widget_yes_no_checkbox_on"
                android:layout_width="@dimen/checkbox_size"
                android:layout_height="@dimen/checkbox_size"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/right_margin"
                android:background="@android:drawable/checkbox_on_background"
                android:clickable="false"
                android:contentDescription="@string/yes_no_goal_checkbox_description"
                android:focusable="false"
                android:hapticFeedbackEnabled="true" />

        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/top_margin"
        android:background="@android:color/darker_gray" />
</LinearLayout>