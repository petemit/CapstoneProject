<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="us.mindbuilders.petemit.timegoalie.NewGoalActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:theme="@style/TimeGoalTheme.AppBarOverlay"
        android:title="@string/time_goalie">

        <android.support.v7.widget.Toolbar
            android:id="@+id/report_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"

            android:title="@string/time_goalie"
            app:popupTheme="@style/TimeGoalTheme.PopupOverlay" />
    </android.support.design.widget.AppBarLayout>

    <FrameLayout
        android:id="@+id/new_goal_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
