            <!--/>-->


    <ImageView
        android:id="@+id/goal_image"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:background="@drawable/soccergoal_right"
        app:layout_constraintBottom_toBottomOf="@+id/less_greenProgressBar"
        app:layout_constraintLeft_toRightOf="@+id/less_greenProgressBar"

        app:layout_constraintTop_toTopOf="@+id/less_greenProgressBar"
        />
    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/left_margin"
        android:visibility="gone"
        android:paddingTop="@dimen/top_margin"
        app:layout_constraintTop_toBottomOf="@+id/less_greenProgressBar"
        android:id="@+id/edit_button_ll"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <Button
            style="@style/TimeGoalTheme.EditButton"
            android:text="@string/minus_large_text"
            android:id="@+id/minus_large"
            />
        <Button
            style="@style/TimeGoalTheme.EditButton"
            android:text="@string/minus_medium_text"
            android:id="@+id/minus_medium"
            />
        <Button
            style="@style/TimeGoalTheme.EditButton"
            android:text="@string/minus_small_text"
            android:id="@+id/minus_small"
            />
        <Button
            style="@style/TimeGoalTheme.EditButton"
            android:text="@string/plus_small_text"
            android:id="@+id/plus_small"
            />
        <Button
            style="@style/TimeGoalTheme.EditButton"
            android:text="@string/plus_medium_text"
            android:id="@+id/plus_medium"
            />
        <Button
            style="@style/TimeGoalTheme.EditButton"
            android:text="@string/plus_large_text"
            android:id="@+id/plus_large"
            />

    </LinearLayout>
    <FrameLayout
        android:id="@+id/feedback_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/less_greenProgressBar"
        app:layout_constraintRight_toRightOf="@+id/less_greenProgressBar"
        app:layout_constraintLeft_toLeftOf="@+id/less_greenProgressBar">

        <TextView
            android:id="@+id/compliment_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Goal saved!  Awesome work!" />

        <TextView
            android:id="@+id/encouraging_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="It slipped away this time!"/>
    </FrameLayout>

    <View
        android:layout_width="368dp"
        android:layout_height="2dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintRight_toRightOf="parent"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_button_ll" />

</android.support.constraint.ConstraintLayout>