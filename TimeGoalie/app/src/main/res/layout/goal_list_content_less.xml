<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:textAppearance="?attr/textAppearanceListItem"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:textAppearance="?attr/textAppearanceListItem"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp" />

    <android.support.v4.widget.Space
        android:layout_width="368dp"
        android:layout_height="@dimen/top_margin"
        android:id="@+id/top_buffer"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/start_stop"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/tv_goal_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Really Really Really Long Goal Title"
        app:layout_constraintRight_toLeftOf="@id/start_stop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/top_buffer"
        app:layout_constraintBottom_toTopOf="@+id/less_greenProgressBar"
      />

    <ToggleButton
        android:id="@+id/start_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TimeGoalTheme.ButtonStyle"
        android:textOff="@string/stop"
        android:textOn="@string/start"
        app:layout_constraintBottom_toTopOf="@+id/less_greenProgressBar"
        app:layout_constraintRight_toRightOf="@+id/less_greenProgressBar"
        app:layout_constraintTop_toBottomOf="@+id/top_buffer"
       />

    <ToggleButton
        android:id="@+id/pencil_button"
        android:layout_width="@dimen/pencil_size"
        android:layout_height="@dimen/pencil_size"
        app:layout_constraintLeft_toRightOf="@+id/start_stop"
        app:layout_constraintTop_toTopOf="@+id/start_stop"
        android:background="@drawable/ic_edit"
        android:textOn=""
        android:textOff=""
        app:layout_constraintRight_toRightOf="@+id/goal_image"
        app:layout_constraintBottom_toTopOf="@+id/goal_image" />


        <android.support.v7.widget.AppCompatSeekBar
            android:id="@+id/less_greenProgressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="@dimen/progress_bar_width"
            android:layout_height="@dimen/progress_bar_height"
            android:mirrorForRtl="true"
            android:progress="40"
            android:thumb="@drawable/anim_soccerball_small"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/start_stop"
            app:layout_constraintBottom_toTopOf="@+id/feedback_frame"
            android:layout_marginStart="@dimen/left_margin"


            />
